############
# Dev
############

# SSH start and add GH key
alias ssh-start='eval `ssh-agent -s` && ssh-add ~/.ssh/${YOUR_KEY}'

eval `ssh-agent -s` && ssh-add ~/.ssh/${YOUR_KEY}

# pyenv to manage Python environments
export PATH="$HOME/.pyenv/bin:$PATH"
eval "$(pyenv init --path)"

# rbenv config to manage Ruby versions
export PATH="/usr/local/lib/ruby/gems/3.3.0/bin:${PATH}"
export PATH="/usr/local/opt/ruby/bin:$PATH"


############
# QoL
############

# Aliases
alias vmi='vim'
alias l='ls'

# Define colors
RED='%F{red}'
GREEN='%F{green}'
YELLOW='%F{yellow}'
BLUE='%F{blue}'
BOLD='%B'
RESET='%f'

# Customize PS1
PS1="${YELLOW}${BOLD}%n@%m${RESET}:${BLUE}${BOLD}%~${RESET}$ %"

